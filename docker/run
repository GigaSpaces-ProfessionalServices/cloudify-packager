#!/bin/bash

HOSTING_VM_IP=$(ip route | awk '/docker0/ { print $NF }')

# elasticsearch
docker run --hostname="elasticsearch" \
           --name="elasticsearch" \
           --publish=9200:9200 \
           --volume=/var/log/cloudify/elasticsearch:/etc/service/elasticsearch/logs
           --volumes-from elasticsearchdata \
           docker_elasticsearch
# elasticsearchdata
docker run --name="elasticsearchdata" \
           docker_elasticsearch \
           echo ELASTICSEARCHDATA

# rabbitmq
docker run --hostname="rabbitmq" \
           --name="rabbitmq" \
           --publish=5672:5672 \
           docker_rabbitmq

# influxdb
docker run --hostname="influxdb" \
           --name="influxdb" \
           --publish=8083:8083 \
           --publish=8086:8086 \
           --volumes-from influxdbdata \
           docker_influxdb
# influxdb
docker run --name="influxdbdata" \
           docker_influxdb \
           echo INFLUXDBDATA

# logstash
docker run --hostname="logstash" \
           --name="logstash" \
           --publish=9999:9999 \
           --volume=/var/log/cloudify/logstash:/etc/service/logstash/logs
           --add-host="elasticsearch:${HOSTING_VM_IP}" \
           --add-host="rabbitmq:${HOSTING_VM_IP}" \
           docker_logstash

# kibana
docker run --hostname="kibana" \
           --name="kibana" \
           --add-host="elasticsearch:${HOSTING_VM_IP}" \
           --publish=5601:5601 \
           docker_kibana

# amqpinflux
docker run --hostname="amqpinflux" \
           --name="amqpinflux" \
           --add-host="influxdb:${HOSTING_VM_IP}" \
           --add-host="rabbitmq:${HOSTING_VM_IP}" \
           docker_amqpinflux

# ui+rest+nginx
docker run --hostname="frontend" \
           --name="frontend" \
           --publish=80:80 \
           --publish=53229:53229 \
           --publish=9001:9001 \
           --publish=8100:8100 \
           --volumes-from frontenddata \
           --add-host="rabbitmq:${HOSTING_VM_IP}" \
           --add-host="elasticsearch:${HOSTING_VM_IP}" \
           docker_frontend
docker run --name="frontenddata" \
           docker_frontend \
           echo FRONTENDDATA

# riemann
docker run --hostname="riemann" \
           --name="riemann" \
           --volume=/var/log/cloudify/riemann:/etc/service/riemann/logs
           --volumes-from riemannhdata \
           --add-host="rabbitmq:${HOSTING_VM_IP}" \
           --add-host="frontend:${HOSTING_VM_IP}" \
           docker_riemann
# riemanndata
docker run --name="riemanndata" \
           docker_riemann \
           echo RIEMANNDATA

# mgmtworker
docker run --hostname="mgmtworker" \
           --name="mgmtworker" \
           --add-host="rabbitmq:${HOSTING_VM_IP}" \
           --add-host="frontend:${HOSTING_VM_IP}" \
           docker_mgmtworker