PKG_NAME="{{ name }}"
PKG_DIR="{{ package_dir }}"

BASE_DIR="/opt"
HOME_DIR="${BASE_DIR}/${PKG_NAME}"

echo "unpacking ${PKG_NAME}..."
sudo tar -C ${BASE_DIR}/ -xvf ${PKG_DIR}/jruby-bin-*.tar.gz
echo "creating ${PKG_NAME} app link..."
sudo ln -s ${BASE_DIR}/jruby-*/ ${HOME_DIR}
echo "creating jruby binary link..."
sudo ln -s ${HOME_DIR}/bin/jruby /usr/bin/jruby
echo "creating gem binary link..."
sudo ln -s ${HOME_DIR}/bin/gem /usr/bin/gem
