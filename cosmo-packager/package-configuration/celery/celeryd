VENV_DIR="/opt/celery"

export CLOUDIFY_APP_DIR=${VENV_DIR}/app
export VIRTUALENV=${VENV_DIR}
CELERYD_MULTI="${VENV_DIR}/bin/celeryd-multi"
CELERYD_USER="root"
CELERYD_GROUP="root"
CELERY_TASK_SERIALIZER="json"
DEFAULT_PID_FILE="${VENV_DIR}/app/%n.pid"
DEFAULT_LOG_FILE="${VENV_DIR}/app/%n.log"
CELERY_RESULT_SERIALIZER="json"
CELERY_RESULT_BACKEND="amqp://guest:guest@localhost:5672//"
CELERYD_CHDIR="${VENV_DIR}/app"
CELERYD_OPTS="--include=plugin_installer.tasks,openstack_host_provisioner.tasks,riemann_config_loader.tasks,worker_installer.tasks --events --loglevel=debug --app=cosmo -Q cloudify.management --broker=amqp://guest:guest@localhost:5672// --hostname=cloudify.management"