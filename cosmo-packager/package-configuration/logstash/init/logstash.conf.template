# logstash - agent instance
#

description     "logstash agent instance"

start on virtual-filesystems
stop on runlevel [06]

# Respawn it if the process exits
respawn
respawn limit 5 30
limit nofile 65550 65550
expect fork

# You need to chdir somewhere writable because logstash needs to unpack a few
# temporary files on startup.
chdir /home/logstash

script

  # This runs logstash agent as the '{{ config_templates.init_params.user }}' user
  su -s /bin/sh -c 'exec "$0" "$@"' {{ config_templates.init_params.user }} -- /usr/bin/java -jar {{ config_templates.init_params.run_dir }}/{{ config_templates.init_params.jar }} agent -f {{ config_templates.init_params.conf_path }} & #--log {{ config_templates.init_params.log_file}} &
  emit logstash-agent-running
end script
