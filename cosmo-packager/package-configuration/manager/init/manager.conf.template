description "manager gunicorn"

start on (filesystem)
stop on runlevel [016]

respawn
console log
# setuid nobody
# setgid nogroup
chdir {{ config_templates.init_params.rest_server_path }}

script
	export MANAGER_REST_CONFIG_PATH={{ config_templates.init_params.gunicorn_conf_path }}
	exec sudo -u {{ config_templates.init_params.gunicorn_user }} -E {{ package_dir }}/bin/gunicorn  -w 1 -b 0.0.0.0:8100 --timeout 300 server:app
end script